%h1 Listing votes

%table
  %tr
    %th Referee
    %th Match
    %th User
    %th Comment
    %th Rate
    %th
    %th
    %th

  - @votes.each do |vote|
    %tr
      %td= vote.referee_id
      %td= vote.match_id
      %td= vote.user_id
      %td= vote.comment
      %td= vote.rate
      %td= link_to 'Show', vote
      %td= link_to 'Edit', edit_vote_path(vote)
      %td= link_to 'Destroy', vote, :confirm => 'Are you sure?', :method => :delete

