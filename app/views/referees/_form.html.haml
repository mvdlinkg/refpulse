= form_for @referee do |f|
  -if @referee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@referee.errors.count, "error")} prohibited this referee from being saved:"
      %ul
        - @referee.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :age
    = f.number_field :age
  .field
    = f.label :nationality
    = f.text_field :nationality
  .field
    = f.label :rate
    = f.text_field :rate
  .field
    = f.label :trend
    = f.text_field :trend
  .actions
    = f.submit 'Save'
